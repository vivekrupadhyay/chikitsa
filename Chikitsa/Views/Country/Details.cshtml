@model Chikitsa.Entities.CountryDetailsVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary ">
    <div class="box-body">
        @using (Html.BeginForm("Details", "Country", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.CntMstr.CountryID)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="">
                <div class="row">
                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <div class="form-group">
                            <div class="controls">
                                @Html.LabelFor(model => model.CntMstr.CountryName, htmlAttributes: new { @class = "control-label " })
                                @Html.EditorFor(model => model.CntMstr.CountryName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CntMstr.CountryName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <div class="form-group">
                            <div class="controls">
                                @Html.LabelFor(model => model.CntMstr.Remark, htmlAttributes: new { @class = "control-label " })
                                @Html.EditorFor(model => model.CntMstr.Remark, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CntMstr.Remark, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        <div class="pull-right">
                            <button type="submit" name="Submit" value="Save" class="btn btn-success btn-flat">Save</button>
                            <button type="button" name="Cancel" onclick="CancelForm('@Url.Action("Index","Country")')" value="Cancel" class="btn btn-default btn-flat">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
