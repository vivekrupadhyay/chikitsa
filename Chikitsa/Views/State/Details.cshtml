@model Chikitsa.Entities.StateDetailsVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary ">
    <div class="box-body">
        @using (Html.BeginForm("Details", "State", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.StateMstr.StateID)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="">
                <div class="row">
                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <div class="form-group">
                            <div class="controls">
                                @Html.Label("Country", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownListFor(model => model.StateMstr.CountryId, new SelectList(Model.CntMst, "CountryID", "CountryName"), "--Select Country--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.StateMstr.CountryId, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <div class="form-group">
                            <div class="controls">
                                @Html.LabelFor(model => model.StateMstr.StateName, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.StateMstr.StateName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.StateMstr.StateName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-3 col-xs-12">
                        <div class="form-group">
                            <div class="controls">
                                @Html.LabelFor(model => model.StateMstr.Remark, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.StateMstr.Remark, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.StateMstr.Remark, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        <div class="pull-right">
                            <button type="submit" name="Submit" value="Save" class="btn btn-success btn-flat">Save</button>
                            <button type="button" name="Cancel" onclick="CancelForm('@Url.Action("Index","State")')" value="Cancel" class="btn btn-default btn-flat">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

